<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdicionarProdutoActivity">


    <EditText
        android:id="@+id/etNomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        android:layout_marginBottom="20dp"
        android:background="#456254"
        android:hint="Nome"
        android:padding="20dp" />

    <EditText
        android:id="@+id/etdescProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNomeProduto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#2E6C4E"
        android:hint="Descrição"
        android:lines="4"
        android:padding="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_below="@+id/etdescProduto"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/etValorProduto"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="#456254"
        android:hint="Valor (R$ 5,45)"
        />

    <Button
        android:id="@+id/btcad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etValorProduto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#ED1B0D"
        android:padding="20dp"
        android:text="Cadastrar"
        app:cornerRadius="20dp" />



    

</RelativeLayout>